{
  "name": "bradietilley/bcmath-number",
  "description": "Simulating the upcoming BCMath\\Number class",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "BradieTilley\\BCMath\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "authors": [
    {
      "name": "Bradie Tilley",
      "homepage": "https://github.com/bradietilley"
    }
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "illuminate/support": "^10.0|^11.0",
    "illuminate/container": "^10.0|^11.0"
  },
  "require-dev": {
    "symfony/var-dumper": "^6.1.5",
    "laravel/pint": "^1.0",
    "pestphp/pest": "^2.0",
    "phpstan/phpstan": "^1.8"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
